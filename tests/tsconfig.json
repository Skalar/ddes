{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "experimentalDecorators": true,
    "preserveSymlinks": true,
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "sourceMap": false,
    "outDir": "../.transpiled-tests",
    "esModuleInterop": true,
    "paths": {
      "@ddes/*": ["packages/@ddes/*"],
      "tests/*": ["*"],
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}