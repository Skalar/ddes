{
  "name": "ddes-dev",
  "description": "DDES",
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint": "yarn workspaces run lint",
    "build": "yarn clean && yarn workspaces run build",
    "clean": "rm -fr packages/@ddes/*/dist",
    "test": "jest"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/git",
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "prepare": [
      "semantic-release-npm-monorepo",
      {
        "path": "@semantic-release/git",
        "assets": [
          "packages/**/package.json"
        ]
      }
    ],
    "publish": [
      "semantic-release-npm-monorepo",
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@async-generators/timeout": "^0.3.0",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@databases/pg": "^2.1.1",
    "@databases/pg-test": "^2.0.0",
    "@lerna/collect-packages": "^3.0.0-beta.17",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.13",
    "@types/lodash": "^4.14.149",
    "@types/node": "^14",
    "@types/semver": "^7.1.0",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "babel-jest": "^26.0.1",
    "debug": "^4.1.1",
    "env-ci": "^5.0.2",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "glob": "^7.1.6",
    "jest": "^26.4.2",
    "lodash": "^4.17.15",
    "ora": "^5.1.0",
    "prettier": "^2.0.2",
    "semantic-release": "^17.0.2",
    "semantic-release-github-pr": "^6.0.0",
    "travis-deploy-once": "^5.0.11",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.19.1",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typescript": "^4.0.2"
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": [
    "packages/@ddes/*"
  ]
}